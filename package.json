{
  "name": "ReactNativeTypeScriptStarter",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "start": "node node_modules/react-native/local-cli/cli.js start",
    "test": "jest",
    "web:build:vendor-dev": "rm -rf web/vendor-dev; NODE_ENV=development webpack --config web/vendor.webpack.config.js || rm -rf web/vendor-dev",
    "web": "[ -d web/vendor-dev ] || npm run web:build:vendor-dev && NODE_ENV=development webpack-dev-server -d --host 0.0.0.0 --port 3000 --config web/webpack.config.js --inline --hot --colors",
    "web:clean": "rm -rf web/vendor web/vendor-dev web/build",
    "web:build:vendor": "rm -rf web/vendor; NODE_ENV=production webpack --config web/vendor.webpack.config.js",
    "web:build:app": "rm -rf web/build; NODE_ENV=production webpack --config web/webpack.config.js",
    "web:build": "npm run web:build:vendor && npm run web:build:app",
    "web:serve": "http-serve -p 3001 --gzip true ./web/build",
    "rn:clean": "watchman watch-del-all && rm -rf $TMPDIR/react-* && rm -rf node_modules/"
  },
  "dependencies": {
    "@types/enzyme-adapter-react-16": "^1.0.2",
    "@types/react-redux": "^6.0.2",
    "react": "16.3.1",
    "react-art": "^16.4.1",
    "react-dom": "^16.4.0",
    "react-native": "0.55.4",
    "react-native-web": "^0.8.3",
    "react-redux": "^5.0.7",
    "redux": "^4.0.0"
  },
  "devDependencies": {
    "@types/enzyme": "^3.1.10",
    "@types/jest": "^23.0.0",
    "@types/react": "^16.4.0",
    "@types/react-native": "^0.55.22",
    "@types/react-test-renderer": "^16.0.1",
    "add-asset-html-webpack-plugin": "^2.1.3",
    "babel-jest": "23.0.1",
    "babel-loader": "^7.1.4",
    "babel-plugin-react-native-web": "^0.8.3",
    "babel-preset-react-native": "4.0.0",
    "compression-webpack-plugin": "^1.1.11",
    "copy-webpack-plugin": "^4.5.1",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "html-webpack-plugin": "^3.2.0",
    "http-serve": "^1.0.1",
    "jest": "23.1.0",
    "offline-plugin": "^5.0.5",
    "react-addons-test-utils": "^15.6.2",
    "react-native-typescript-transformer": "^1.2.9",
    "react-test-renderer": "16.3.1",
    "reactotron-react-native": "^1.14.0",
    "reactotron-redux": "^1.13.0",
    "serviceworker-webpack-plugin": "^1.0.0-alpha02",
    "ts-jest": "^22.4.6",
    "typescript": "^2.9.1",
    "url-loader": "^1.0.1",
    "webpack": "^4.12.0",
    "webpack-cli": "^3.0.6",
    "webpack-dev-server": "^3.1.4"
  },
  "jest": {
    "setupTestFrameworkScriptFile": "<rootDir>/src/test/testsConfiguration.js",
    "preset": "react-native",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "^.+\\.(js)$": "<rootDir>/node_modules/babel-jest",
      "\\.(ts|tsx)$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx)$",
    "testPathIgnorePatterns": [
      "\\.snap$",
      "<rootDir>/node_modules/"
    ],
    "cacheDirectory": ".jest/cache"
  }
}
